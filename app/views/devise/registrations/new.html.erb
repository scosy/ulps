<section class="position-relative py-5">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-5 me-auto mb-5">
        <div>
          <div class="mx-auto text-center py-5">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
              <span class="text-muted">ULPS</span>
              <h3 class="fw-bold mb-5"><%= t('.sign_up') %></h3>

              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control mb-2', placeholder: "Email" %>
              <% if resource.errors[:email].present? %>
                <p class="error_msg"><%= resource.errors[:email][0]%></p>
              <% end %>

              <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control mb-2', placeholder: "Mot de passe" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
              <% end %>
              <% if resource.errors[:password].present? %>
                <p class="error_msg"><%= resource.errors[:password][0]%></p>
              <% end %>

              <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control mb-2', placeholder: "Confirmation du mot de passe"  %>
              <% if resource.errors[:password_confirmation].present? %>
                <p class="error_msg"><%= resource.errors[:password_confirmation][0]%></p>
              <% end %>

              <%= f.submit t('.sign_up'), class: 'btn btn-primary py-2 w-100 mb-3' %>
            <% end %>
            <%= render 'devise/shared/links' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>