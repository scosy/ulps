<% provide(:title, "Mon compte") %>

<div class="container">
  <h1><%= t('.title', resource: resource_name.to_s.humanize) %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }, html: { method: :put }) do |f| %>
    <%= bootstrap_devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      <% if resource.errors[:email].present? %>
        <p class="error_msg"><%= resource.errors[:email][0]%></p>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
      <% if resource.errors[:password].present? %>
        <p class="error_msg"><%= resource.errors[:password][0]%></p>
      <% end %>

      <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
      <% if resource.errors[:password_confirmation].present? %>
        <p class="error_msg"><%= resource.errors[:password_confirmation][0]%></p>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
      <% if resource.errors[:current_password].present? %>
        <p class="error_msg"><%= resource.errors[:current_password][0]%></p>
      <% end %>

      <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
    </div>

    <div class="form-group">
      <%= f.submit t('.update'), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to t('.back'), :back %>
</div>