
<div class="position-relative">
    <div class="container">
        <div class="row pt-5">
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><%= link_to "Tous les livres", episodes_path %></li>
                    <li class="breadcrumb-item active"><%= link_to @episode.book.categories.first.name, "category_path(@episode.book.category)" %></li>
                </ol>
            </nav>
        </div>
        <div class="row pt-4">
            <div class="col-sm-12 col-lg-3 ms-auto">
                <div class="mb-4" style="width: fit-content; margin-left:auto; margin-right:auto">
                <%= image_tag @episode.book.image_url, class: "img-fluid rounded-3 mb-3", width: "232px" %>
                <div class="d-grid gap-2">
                    <a class="btn btn-light" href="/checkout">▶ Extrait</a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-lg-5 ms-auto">
            <div class="mb-5">
                <h2 class="display-6 fw-bold"><%= @episode.book.title %></h2>
                <% if @episode.book.subtitle %>
                    <div class="mb-4 lead text-muted"><%= @episode.book.subtitle %></div>
                <% end %>
                <div>Auteur: <span style="font-weight: 600"><%= @episode.book.author %></span></div>
                <div>Durée: <span style="font-weight: 600"><%= @episode.duration / 60 %> minutes</span></div>
                <div class="episode_categories">Catégorie: <span style="font-weight: 600"><%= link_to @episode.book.categories.first.name, "category_path(@episode.book.category)" %></span></div>
            </div>
        </div>
        <div class="col-sm-12 col-lg-4 ms-auto">
            <%= render "episodes/episode/header_buttons" %>
        </div>
    </div>
</div>
