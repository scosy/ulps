<section class="py-5">
  <div class="container">
    <div class="row mb-5">
      <div class="col-12 col-lg-8 col-xxl-7 text-center mx-auto">
        <span class="text-muted" contenteditable="false">ULPS</span>
        <h2 class="display-5 fw-bold mt-2 mb-3" contenteditable="false">Tous les épisodes ULPS</h2>
        <p class="lead text-muted" contenteditable="false">Découvre un nouveau résumé ici chaque semaine.</p>
      </div>
    </div>
    <div class="row my-5">
      <ul class="list-group">
        <% @episodes.each do |episode| %>
          <li class="list-group-item">
            <div class="row">
              <div class="col-md-auto col-12">
                <%= image_tag episode.book.image_url, alt:"Image de l'épisode #{episode.book.title}", class: "rounded-4 episode-image" %>
              </div>
              <div class="col-md-8 col-12">
                <h3 class="fw-bold"><%= episode.book.title %></h3>
                <h6 class="text-muted"><%= episode.book.subtitle %></h6>
                <div class="text-muted">Auteur: <%= episode.book.author %></div>
                <div class="text-muted">Durée: <%= episode.duration / 60 %> minutes</div>
                <% if episode.users.include?(current_user) %>
                  <div class="text-muted">Ajouté le: <%= episode.user_episodes.find_by(user: current_user).created_at.strftime("%d/%m/%Y") %></div>
                  <%= link_to "Accéder à l'épisode", episode_path(episode), class: "btn btn-outline-secondary mt-3" %>
                <% else %>
                  <%= link_to "En savoir plus", episode_path(episode), class: "btn btn-primary mt-3" %>
                <% end %>
              </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="text-center"><a class="btn btn-primary" href="#">View More Articles</a></div>
  </div>
</section>