
<div class="position-relative">
<div class="container">
    <div class="row pt-5">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "Tous les livres", episodes_path %></li>
        <li class="breadcrumb-item active"><%= link_to @episode.book.categories.first.name, "category_path(@episode.book.category)" %></li>
        </ol>
    </nav>
    </div>
    <div class="row pt-4">
    <div class="col-sm-12 col-lg-3 ms-auto">
        <div class="mb-4" style="width: fit-content">
        <%= image_tag @episode.book.image_url, class: "img-fluid rounded-3 mb-1", width: "232px" %>
        <div class="d-grid gap-2">
            <a class="btn btn-secondary" href="/checkout">▶ Extrait</a>
        </div>
        </div>
    </div>
    <div class="col-sm-12 col-lg-5 ms-auto">
        <div class="mb-5">
        <h2 class="display-6 fw-bold"><%= @episode.book.title %></h2>
        <% if @episode.book.subtitle %>
            <div class="mb-4 lead text-muted"><%= @episode.book.subtitle %></div>
        <% end %>
        <div>Auteur: <%= @episode.book.author %></div>
        <div>Durée: <%= @episode.duration / 60 %> minutes</div>
        <div class="episode_categories">Catégorie: <%= link_to @episode.book.categories.first.name, "category_path(@episode.book.category)" %></div>
        </div>
    </div>
    <div class="col-sm-12 col-lg-4 ms-auto">
        <div class="mb-5">
        <div class="d-grid gap-2">
            <a class="btn btn-primary me-2 mb-2 mb-sm-0" href="/checkout">0,00 € avec l'offre d'essai</a>
        </div>
        <p class="text-muted mt-2" style="font-size: small">5,95 €/mois après 30 jours. Résiliation libre.</p>
        </div>
    </div>
    </div>
</div>
</div>
