    <%= link_to "Mes épisodes", user_episodes_path, class: "btn btn-outline-secondary me-2 d-none d-lg-inline-block" %>

    <%= link_to "Voir le catalogue", episodes_path, class: "btn btn-outline-light me-2 d-inline-block d-lg-none" %>
