<% if current_user %>
    <%= link_to "Voir le catalogue", episodes_path, class: "btn btn-outline-secondary me-2" %>
    <%= link_to "Mes épisodes", user_episodes_path, class: "btn btn-outline-secondary me-2" %>
    <% if current_user.subscribed? %>
        <% if current_user.available_credits == 0 %>
            <%= link_to "Acheter 3 crédits", checkout_pack_credits_path, class: "btn btn-primary" %>
        <% end %>
    <% else %>
        <%= link_to "30 jours d'essai gratuit", checkout_membership_path, class: "btn btn-primary" %>
    <% end %>
<% else %>
    <%= link_to "J'ai déjà un compte", new_user_session_path, class: "btn btn-outline-secondary me-2" %>
    <%= link_to "30 jours d'essai gratuit", new_user_registration_path, class: "btn btn-primary" %>
<% end %>