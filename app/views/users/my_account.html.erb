<div class="container">
    <div class="row">
        <h1>Mon compte</h1>
        <div class="col-md-6">
            <div class="form-group mt-2">
                <label for="email">Adresse email: </label>
                <%= current_user.email %>
            </div>
            <% if current_user.subscribed? %>
                <div class="form-group mt-2">
                    <%= link_to "Facturation", billing_path, class: "btn btn-primary" %>
                </div>
            <% end %>
        </div>
    </div>
</div>