<h1>Public#index</h1>
<p>Find me in app/views/public/index.html.erb</p>

<% if current_user %>
    <%= image_tag current_user.avatar_url %>
    <p>Hello, <%= current_user.name %></p>
    <p>Your email is <%= current_user.email %></p>
    <%= link_to "Edit your profile", edit_user_registration_path %>
    <%= button_to "Sign out", destroy_user_session_path, data: { turbo: "false" }, method: :delete %>
<% else %>
    <p>Hello, stranger</p>
    <%= link_to "Sign in", new_user_session_path %>
    <%= link_to "Sign up", new_user_registration_path %>
<% end %>